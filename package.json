{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "eslint --ext .ts --ext .tsx ."
  },
  "dependencies": {
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.4",
    "@types/jest": "^26.0.22",
    "@types/node": "^12.20.10",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.0.7"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/pages/_app.tsx",
      "!src/pages/_document.tsx",
      "!<rootDir>/node_modules/",
      "!<rootDir>/build/",
      "!**/*.svg.{js,jsx,ts,tsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "utils",
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.tsx?$": "ts-jest",
      "\\.jsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    }
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "**/*.md"
        ],
        "options": {
          "printWidth": 60,
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "license": "MIT"
}
